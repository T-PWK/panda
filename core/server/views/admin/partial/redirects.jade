.row
    .col-md-3
        include includes/navigation
    .col-md-9
        include includes/breadcrumb

        .page-header
            h1 Redirects

        .row(ng-controller="RedirectsListCtrl")

            .form-group(ng-if="items.length")
                .row
                    .col-sm-3
                        button.btn.btn-sm.btn-danger(type="button", ng-click="delete()", ng-disabled="deleting.isEmpty()") Delete
                        button.btn.btn-sm.btn-default(type="button", ng-click="deleting.empty()", ng-disabled="deleting.isEmpty()") Reset
                        button.btn.btn-sm.btn-success(type="button", ng-click="verify()", ng-disabled="items.length<2") Verify
                    .col-sm-4.col-sm-offset-5
                        .input-group.input-group-sm
                            input.form-control(type="text", ng-model="url.$", ng-key-action="{27:'onEsc'}", on-esc="url.$=''")
                            span.input-group-addon: i.fa.fa-search

            .text-center(ng-if="!items.length && isLoading")
                i.fa.fa-spinner.fa-spin
                |  Loading &hellip;

            .alert.alert-warning
                i.fa.fa-fw.fa-exclamation-triangle
                | Verification Issues
                ul
                    li(ng-repeat="i in verification.items")
                        | {{i.item.from}}
                        i.fa.fa-fw.fa-chain
                        | {{i.chain.from}}

            //- List of redirects
            table.table.table-striped(ng-if="items.length")
                thead
                    tr
                        th.col-sm-1: a(href="", ng-click="deleting.empty()", ng-hide="deleting.isEmpty()")
                            i.fa.fa-fw.fa-times-circle
                            | ({{deleting.howMany()|number}})
                        th.col-sm-5
                            a(href="", ng-click="order='from'")
                                | From&nbsp;
                            a(href="", ng-click="order='-from'")
                                i.fa.fa-sort-alpha-desc
                        th.col-sm-4
                            a(href="", ng-click="order='to'")
                                | To&nbsp;
                            a(href="", ng-click="order='-to'")
                                i.fa.fa-sort-alpha-desc
                        th.col-sm-2
                            a(href="", ng-click="order='type'")
                                | Type&nbsp;
                            a(href="", ng-click="order='-type'")
                                i.fa.fa-sort-alpha-desc
                tbody
                    tr(ng-repeat="item in items | filter:url | orderBy:order | startFrom:pg.firstItem | limitTo:pg.pageSize")
                        td: i.btn-link.fa.fa-fw(ng-class="{'fa-square-o':!deleting.has(item.id),'fa-check-square-o':deleting.has(item.id)}", ng-click="deleting.toggle(item.id)")
                        td: a(href="", ng-click="$emit('edit', item)") {{item.from}}
                        td {{item.to}}
                        td
                            i.fa(ng-class="{'internal':'fa-star-o','301':'fa-star','302':'fa-star-half-o'}[item.type]")
                            |  {{item.type||'internal'}}

            .btn-toolbar.pull-right(ng-if="items.length")
                p.btn-group Show rows:

                //- Rows per screen selection
                .btn-group.dropup.space-r
                    button.btn.btn-default.btn-sm.dropdown-toggle(type="button", data-toggle="dropdown")
                        | {{pg.pageSize}}&nbsp;
                        span.caret
                    ul.dropdown-menu
                        li(ng-class="{active:pg.pageSize==s}", ng-repeat="s in [10,25,50,100]")
                            a(href="", ng-click="pg.pageSize=s") {{s}}

                p.btn-group {{pg.from|number}}-{{pg.to|number}} of {{pg.items|number}}

                .btn-group
                    button.btn.btn-sm.btn-default(type="button", ng-click="pg.prev()", ng-class="{disabled:!pg.hasPrev}") &laquo;
                    .btn-group.dropup
                        button.btn.btn-sm.btn-default.dropdown-toggle(type="button", data-toggle="dropdown")
                            | {{pg.current}}&nbsp;
                            span.caret
                        ul.dropdown-menu.scrollable-menu
                            li(ng-repeat="p in pg.pageRange", ng-class="{active:p==pg.current}"): a(href="", ng-click="pg.current=p") {{p}}
                    button.btn.btn-sm.btn-default(type="button", ng-click="pg.next()", ng-class="{disabled:!pg.hasNext}") &raquo;

            .text-center(ng-if="!items.length && !isLoading") No redirects have been configured. You can create one in the form below.

        hr

        //- Redirect edti / create form
        form.form-horizontal(name="form", ng-controller="RedirectEditCtrl")

            //- Redirect from value
            .form-group(ng-class="{'has-error':!form.from.$valid && !form.from.$pristine}")
                label.col-sm-2.control-label(for="from") From
                .col-sm-7
                    .input-group
                        input.form-control#from(type="text", placeholder="From", 
                            ng-model="item.from", name="from", required, ng-trim="false",
                            ng-pattern="path")
                        span.input-group-btn
                            button.btn.btn-default(type="button", 
                                ng-click="item.from=fix(form.from.$viewValue)",
                                ng-disabled="!form.from.$viewValue || form.from.$valid"): i.fa.fa-wrench

            //- Redirect to
            .form-group(ng-class="{'has-error':!form.toinput.$valid && !form.toinput.$pristine}")
                label.col-sm-2.control-label(for="toinput") To
                .col-sm-7
                    .input-group
                        input.form-control#toinput(type="text", placeholder="To", 
                            ng-model="item.to", required, ng-trim="true", name="toinput",
                            ng-pattern="path")
                        span.input-group-btn
                            button.btn.btn-default(type="button", 
                                ng-click="item.to=fix(form.toinput.$viewValue)",
                                ng-disabled="!form.toinput.$viewValue || form.toinput.$valid"): i.fa.fa-wrench

            .form-group
                label.col-sm-2.control-label Redirect Type
                .col-sm-8
                    label.radio-inline
                        input(type="radio", ng-model="item.type", value="301", name="type", required)
                        | Moved Permanently (301)
                    label.radio-inline
                        input(type="radio", ng-model="item.type", value="302", name="type", required)
                        | Moved Temporarily (302)
                    label.radio-inline
                        input(type="radio", ng-model="item.type", value="internal", name="type", required)
                        | Internal Forward

            .form-group
                .col-sm-offset-2.col-sm-10
                    button.btn.btn-primary(type="button", ng-if="isEdit", ng-disabled="form.$invalid || form.$pristine", ng-click="update()") Update
                    button.btn.btn-primary(type="button", ng-if="!isEdit", ng-disabled="form.$invalid || form.$pristine", ng-click="create()") Create
                    button.btn.btn-default(type="button", ng-click="reset()") Reset
