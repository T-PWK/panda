.row
    .col-md-3
        include includes/navigation
    .col-md-9
        include includes/breadcrumb

        .btn-toolbar(role="toolbar")
            .btn-group
                button.btn.btn-default(type="button")
                    i.fa.fa-check-square-o
                    i.fa.fa-square-o
                button.btn.btn-default(type="button", ng-if="publish") Publish
                button.btn.btn-default(type="button") Revert to draft
                button.btn.btn-default(type="button"): i.fa.fa-trash-o

            .btn-group.pull-right
                .btn-group
                    button.btn.btn-default.dropdown-toggle(type="button", data-toggle="dropdown")
                        | {{itemsPerPage}} 
                        span.caret
                    ul.dropdown-menu
                        li: a(href="#", ng-click="setItemsPerPage(10, $event)") 10
                        li: a(href="#", ng-click="setItemsPerPage(25, $event)") 25
                        li: a(href="#", ng-click="setItemsPerPage(50, $event)") 50
                        li: a(href="#", ng-click="setItemsPerPage(100, $event)") 100

            .btn-group.pull-right
                button.btn.btn-default(type="button") &laquo;
                button.btn.btn-default(type="button") 1
                button.btn.btn-default(type="button") 2
                button.btn.btn-default(type="button") 3
                button.btn.btn-default(type="button") &raquo;

            p.btn-group.pull-right 1-10 of 24
        hr
        table.table
            tbody
                tr(ng-repeat="post in posts")
                    td: input(type="checkbox")
                    td: a(href="#") {{post.title}}
                    td: span(ng-class="{'text-warning':post.state=='Draft','text-success':post.state=='Published'}") {{post.state}}
                    td: a(ng-href="{{post.author.website}}", target="_blank") {{post.author.name}}
                    td
                        | {{post.comments}} 
                        i.fa.text-muted(ng-class="{'fa-comments-o':post.comments>0,'fa-comment-o':post.comments==0}")
                    td {{post.publishedAt|date:'mediumDate'}}