.row
    .col-md-12
        form.form-horizontal(role="form")
            .form-group
                .col-md-8
                    label.sr-only.control-label(for="postTitle") Page Title
                    input.form-control(type="text", id="postTitle", placeholder="Enter Post Title", ng-model="post.title", ng-required)
                .col-md-4
                    .btn-group.pull-right
                        button.btn.btn-warning Publish
                        button.btn.btn-default(ng-click="savePost()") Save
                        button.btn.btn-default Preview
                        button.btn.btn-default Close
hr
.row
    .col-md-3 
        #accordion.panel-group

            //- Labels (tags) setup
            .panel.panel-default
                .panel-heading(data-toggle="collapse", data-parent="#accordion", data-target="#labels")
                    .panel-title.btn-link
                        i.fa.fa-tags
                        |  Labels
                #labels.panel-collapse.collapse
                    .panel-body
                        .form-group
                            .input-group
                                input.form-control(type="text", placeholder="Type Label", ng-model="labels", ng-list=",", ng-enter="addLabel(labels);labels=[]")
                                span.input-group-btn
                                    button.btn.btn-default(type="button", ng-click="addLabel(labels);labels=[]"): i.fa.fa-plus
                            span.help-block
                                i.fa.fa-info-circle
                                |  Enter label name
                        i.fa.fa-tags
                        |  Post labels
                        ul.list-inline
                            li.btn-link(ng-click="delLabel(label)", 
                                ng-repeat="label in post.labels") {{label}}
                        i.fa.fa-tags
                        |  Available Labels
                        ul.list-inline
                            li.btn-link(ng-click="addLabel(label.label)", 
                                ng-repeat="label in allLabels | orderBy:'label'") {{label.label}}

                        hr
                        .checkbox: label
                            input(type="checkbox", ng-model="post.featured")
                            |  Featured
                        span.help-block
                            i.fa.fa-info-circle
                            |  You can mark your post as featured.

            //- Post publication date setup
            .panel.panel-default
                .panel-heading(data-toggle="collapse", data-parent="#accordion", data-target="#schedule")
                    .panel-title.btn-link
                        i.fa.fa-clock-o 
                        |  Schedule
                #schedule.panel-collapse.collapse
                    .panel-body
                        .radio: label
                            input(type="radio", ng-model="post.scheduleOpt", ng-value="true")
                            | Automatic
                        .radio: label
                            input(type="radio", ng-model="post.scheduleOpt", ng-value="false")
                            | Set date and time
                        .form-group(ng-if="!post.scheduleOpt")
                            input.form-control(type="datetime-local", placeholder="Set date and time", ng-model="post.scheduleDateTime")
                        p.help-block(ng-if="post.scheduleOpt") 
                            i.fa.fa-info-circle
                            |  Your post will be automatically published when you press Publish button.
                        p.help-block(ng-if="!post.scheduleOpt") 
                            i.fa.fa-info-circle
                            |  Your post will be published at a specified date and time.

            //- Post slug setup
            .panel.panel-default
                .panel-heading(data-toggle="collapse", data-parent="#accordion", data-target="#link")
                    .panel-title.btn-link
                        i.fa.fa-link
                        |  Permalink
                #link.panel-collapse.collapse
                    .panel-body
                        i.fa.fa-link
                        |  Permalink
                        br
                        span.text-muted {{permalink}}
                        hr
                        .radio: label
                            input(type="radio", ng-model="post.slugOpt", ng-value="true")
                            | Automatic
                        .radio: label
                            input(type="radio", ng-model="post.slugOpt", ng-value="false")
                            | Custom
                        .form-group(ng-if="!post.slugOpt")
                            input.form-control(type="text", placeholder="Enter custom slug", ng-model="post.slug")
                        p.help-block(ng-if="post.slugOpt") 
                            i.fa.fa-info-circle
                            |  Your post slug will be automatically generated from the post title.
                        p.help-block(ng-if="!post.slugOpt") 
                            i.fa.fa-info-circle
                            |  Your post slug will be set manually.


            //- Page setup
            .panel.panel-default
                .panel-heading(data-toggle="collapse", data-parent="#accordion", data-target="#page")
                    .panel-title.btn-link
                        i.fa.fa-file-text-o
                        |  Page
                #page.panel-collapse.collapse
                    .panel-body
                        .checkbox: label
                            input(type="checkbox", ng-model="post.page")
                            |  Page
                        span.help-block
                            i.fa.fa-info-circle
                            |  You can mark your post as page, which will remove the it from your post feed. 
                            br
                            | It can be used for content like About, Contact etc.

    .col-md-9
        ul.nav.nav-pills
            li(ng-class="{active:editor}"): a.btn-link.btn-sm(ng-click="editor=true")
                i.fa.fa-edit
                |  Editor
            li(ng-class="{active:!editor}"): a.btn-link.btn-sm(ng-click="editor=false")
                i.fa.fa-eye
                |  Preview
        hr
        .tab-content
            .tab-pane(ng-class="{active:editor}")
                textarea.form-control#editor
            .tab-pane(ng-class="{active:!editor}")
                .panel.panel-default
                    .panel-body(ng-bind-html="postContent()")

