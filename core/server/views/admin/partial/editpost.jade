//- # Mixins
mixin slugForm
    .panel.panel-default(ng-controller="SlugCtrl")
        .panel-heading(data-toggle="collapse", data-parent="#accordion", data-target="#link")
            .panel-title.btn-link
                i.fa.fa-fw.fa-link
                | Permalink
        #link.panel-collapse.collapse
            .panel-body
                i.fa.fa-link.fa-fw
                | Permalink
                br
                span.help-block {{permalink}}
                hr
                form(name="slugForm")
                    .radio: label
                        input(type="radio", ng-model="post.autoSlugOpt", ng-value="true")
                        | Automatic
                    .radio: label
                        input(type="radio", ng-model="post.autoSlugOpt", ng-value="false")
                        | Custom
                    .form-group(ng-if="!post.autoSlugOpt", ng-class="{'has-error':slugForm.slug.$invalid}")
                        .input-group
                            input.form-control(type="text", placeholder="Enter custom slug",
                                ng-model="post.slug", ng-trim="true", ng-pattern="/^\\w+(-\\w+)*$/",
                                name="slug")
                            span.input-group-btn
                                button.btn.btn-default(type="button", ng-click="fix(slugForm.slug.$viewValue)", ng-disabled="slugForm.slug.$valid"): i.fa.fa-wrench
                    p.help-block(ng-if="post.autoSlugOpt")
                        i.fa.fa-fw.fa-info-circle
                        | Your post slug will be automatically generated from the post title.
                    p.help-block(ng-if="!post.autoSlugOpt")
                        i.fa.fa-fw.fa-info-circle
                        | Your post slug will be set manually. Use
                        i.fa.fa-wrench.fa-fw
                        | button to correct your slug.

mixin pageForm
    //- Page setup
    .panel.panel-default
        .panel-heading(data-toggle="collapse", data-parent="#accordion", data-target="#page")
            .panel-title.btn-link
                i.fa.fa-fw.fa-file-text-o
                | Page
        #page.panel-collapse.collapse
            .panel-body
                .checkbox: label
                    input(type="checkbox", ng-model="post.page")
                    | Page
                span.help-block
                    i.fa.fa-fw.fa-info-circle
                    | You can mark your post as page, which will remove the it from your post feed.
                    br
                    | It can be used for content like About, Contact etc.

mixin scheduleForm
    .panel.panel-default(ng-controller="ScheduleCtrl")
        .panel-heading(data-toggle="collapse", data-parent="#accordion", data-target="#schedule")
            .panel-title.btn-link
                i.fa.fa-fw.fa-clock-o
                | Schedule
        #schedule.panel-collapse.collapse
            .panel-body
                .radio: label
                    input(type="radio", ng-model="post.autoPublishOpt", ng-value="true")
                    | Automatic
                .radio: label
                    input(type="radio", ng-model="post.autoPublishOpt", ng-value="false")
                    | Set date and time
                .form-group(ng-if="!post.autoPublishOpt", ng-class="{'has-error':!opt.customScheduleValid}")
                    .input-group
                        input.form-control(type="text", placeholder="Set date and time", ng-model="opt.customSchedule")
                        span.input-group-btn
                            button.btn.btn-default(type="button", ng-click="opt.customSchedule=now()"): i.fa.fa-clock-o
                p.help-block(ng-if="post.autoPublishOpt")
                    i.fa.fa-fw.fa-info-circle
                    | Your post will be automatically published when you press Publish button.
                p.help-block(ng-if="!post.autoPublishOpt")
                    i.fa.fa-fw.fa-info-circle
                    | Your post will be published at a specified date and time.
                    i.fa.fa-fw.fa-clock-o
                    | sets current date and time.

mixin labelsForm
    .panel.panel-default(ng-controller="LabelsCtrl")
        .panel-heading(data-toggle="collapse", data-parent="#accordion", data-target="#labels")
            .panel-title.btn-link
                i.fa.fa-fw.fa-tags
                | Labels
        #labels.panel-collapse.collapse
            .panel-body
                .form-group
                    .input-group
                        input.form-control(type="text", placeholder="Type Label", ng-model="labels", ng-list=",", ng-enter="addLabel(labels);labels=[]")
                        span.input-group-btn
                            button.btn.btn-default(type="button", ng-click="addLabel(labels);labels=[]"): i.fa.fa-plus
                    span.help-block
                        i.fa.fa-info-circle.fa-fw
                        | Enter label name
                i.fa.fa-tags.fa-fw
                | Post labels
                ul.list-inline
                    li.btn-link(ng-click="delLabel(label)", ng-repeat="label in post.labels") {{label}}
                i.fa.fa-tags.fa-fw
                | Available Labels
                ul.list-inline
                    li.btn-link(ng-click="addLabel(label.label)", ng-repeat="label in allLabels | orderBy:'label'") {{label.label}}

                hr
                .checkbox: label
                    input(type="checkbox", ng-model="post.featured")
                    |  Featured
                span.help-block
                    i.fa.fa-info-circle.fa-fw
                    | You can mark your post as featured.


//- # Page Content
.row
    .col-md-12
        form.form-horizontal(name="form")
            .form-group(ng-class="{'has-error':form.$invalid && form.title.$dirty}")
                label.col-sm-2.control-label(for="title") Page Title
                .col-sm-10
                    .input-group
                        input.form-control#title(type="text", placeholder="Enter Post Title",
                            ng-model="post.title", required, name="title", ng-maxlength="100")
                        span.input-group-btn
                            button.btn.btn-default(type="button", ng-click="titleize()"): i.fa.fa-font
        hr

        .row
            .col-md-3
                #accordion.panel-group

                    //- Labels (tags) setup
                    mixin labelsForm()

                    //- Post publication date setup
                    mixin scheduleForm()

                    //- Post slug setup
                    mixin slugForm()

                    //- Page setup
                    mixin pageForm()

                .alert.alert-warning(ng-show="status(post)=='A'")
                    i.fa.fa-fw.fa-info-circle
                    | Keep in mind that you are editing a live post and all changes will affect your blog


            .col-md-9
                .btn-group
                    button.btn.btn-default(type="button", ng-click="opt.editor=true", ng-class="{active:opt.editor}")
                        i.fa.fa-edit
                        |  Editor
                    button.btn.btn-default(type="button", ng-click="opt.editor=false", ng-class="{active:!opt.editor}")
                        i.fa.fa-eye
                        |  Preview

                .btn-group.pull-right
                    button.btn.btn-warning(ng-click="publish()", ng-if="!post.published && post.$resolved") Publish
                    button.btn.btn-warning(ng-click="draft()", ng-if="post.published && post.$resolved") Revert to Draft
                    button.btn.btn-default(ng-click="create()", ng-if="opt.create") Create
                    button.btn.btn-default(ng-click="save()", ng-if="!opt.create", ng-disabled="!canSave()") Save
                    a.btn.btn-default(ng-href="{{post.page?'#/pages':'#/posts'}}") Close

                hr

                .tab-content
                    .tab-pane(ng-class="{active:opt.editor}")
                        textarea.form-control#editor
                    .tab-pane(ng-class="{active:!opt.editor}")
                        .panel.panel-default
                            .panel-body(ng-bind-html="postContent()")