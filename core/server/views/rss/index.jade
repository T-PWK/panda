doctype xml
rss(version="2.0")
    channel
        title
            :cdata
                !{app.title}
        description
            :cdata
                !{app.description}
        link= app.url
        language en
        copyright= app.copyright
        generator Panda 0.0.1
        each post in posts
            item
                title
                    :cdata
                        !{post.title}
                description
                    :cdata
                        !{post.content}
                link= $url(post, true)
                pubDate= post.scheduled.toUTCString()

