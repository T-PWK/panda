doctype xml
rss(version="2.0", xmlns:atom="http://www.w3.org/2005/Atom")
    channel
        title
            :cdata
                !{title}
        description
            :cdata
                !{description}
        link #{url}/
        language en
        generator Panda v#{version}
        atom:link(rel="self", type="application/rss+xml", href="#{url}#{context}")
        if author
            author= author.name
        ttl 60
        each post in posts
            item
                title
                    :cdata
                        !{post.title}
                description
                    :cdata
                        !{post.content}
                link= $url(post, true)
                each label in post.labels
                    category
                        :cdata
                            #{label}
                pubDate= $date(post, 'utc')

