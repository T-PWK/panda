extends layout

block content
    main.content(role="main")
        article.post

            header.post-header
                a.blog-logo(href=blog.url)
                    if blog.logo
                        img(src=blog.log, alt="Blog Logo")
                    else
                        span.blog-title=blog.title

            span.post-meta
                time(datetime=$date(post)) #{$date(post, 'DD MMM YYYY')}
                if post.labels.length
                    |  on #{$labels(post, ' | ')} 

            h1.post-title=post.title

            section.post-content!= post.content

            footer.post-footer

                section.author
                    h4= post.author.name
                    p= post.author.bio

                section.share
                    h4 Share this post

                    a.icon-twitter(href='http://twitter.com/share?text='+$encode(post.title)+'&url='+$url(post, true), onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;")
                        span.hidden Twitter

                    a.icon-facebook(href='https://www.facebook.com/sharer/sharer.php?u='+$url(post, true), onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;")
                        span.hidden Facebook

                    a.icon-google-plus(href='https://plus.google.com/share?url='+$url(post, true), onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;")
                        span.hidden Google+
